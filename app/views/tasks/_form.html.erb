<%= form_for(task) do |f| %>

<% if task.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% task.errors.full_messages.each do |task| %>
        <li>
          <%= task %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

  <%= f.label :content, '新規タスク' %>
  <%= f.text_field :content %><p></p>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %><p></p>
  
  <%= f.submit '投稿' %>
  
<% end %>