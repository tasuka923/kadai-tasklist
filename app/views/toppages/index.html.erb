<% if logged_in? %>
  <div class="row">
    
    <div class="col-xs-8">
      <%= render 'tasks/tasks', tasks: @tasks, user: @user %>
    </div>
  </div>
<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      <h1>
        タスク管理アプリへようこそ！
      </h1>
      <%= link_to '新規登録', signup_path, class: 'btn btn-success' %>
    </div>
  </div>
  
<% end %>
